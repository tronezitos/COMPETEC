CREATE DATABASE FranquiaRE;
USE FranquiaRE;

CREATE TABLE Jogos (
	id INT AUTO_INCREMENT PRIMARY KEY,
    Nome VARCHAR(100) NOT NULL,
    Lancamento DATE NOT NULL,
	Console VARCHAR(100),
	Diretor VARCHAR(100)
);

